{
	"provisioners": [
	 {
		"type": "shell",
		"scripts": [ 
			"scripts/vagrant.sh",
			"scripts/sudo.sh",
			"scripts/ssh.sh",
			"scripts/vmtools.sh",
			"scripts/puppet.sh",
			"scripts/zero.sh"
		]
	 }
	],
  "builders": [
    {
      "type": "vmware-iso",
		"name": "squeeze-32",
      "boot_command": [
		  "<esc><esc><enter><wait>",
        "<tab> install auto=true priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter><wait>"
      ],
      "boot_wait": "2s",
      "disk_size": 10480,
      "guest_os_type": "Debian6",
      "http_directory": "http",
      "iso_checksum": "6ebdb31269a3eaaf72fca0ed2f6ba29b",
		"iso_checksum_type": "md5",
      "iso_url": "file:/iso/debian-6.0.7-i386-netinst.iso",
      "skip_compaction": false,
      "ssh_username": "root",
      "ssh_password": "install",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h now",
		"headless": true,
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "memsize": "480",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "post-processors": [
    "vagrant"
  ]
}
